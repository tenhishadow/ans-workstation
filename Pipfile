[[source]]
name         = "pypi"
url          = "https://pypi.org/simple"
verify_ssl   = true

[dev-packages]
ansible-lint = "*"
yamllint     = "*"

[packages]
ansible      = "*"

[scripts]
install      = "ansible-playbook playbook.yml --diff"
pkg          = "ansible-playbook playbook.yml -t install_packages --diff"
setup        = "ansible localhost -m setup"
lint         = "ansible-lint playbook_install.yml"
