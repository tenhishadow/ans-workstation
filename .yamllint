---

yaml-files:
  - '*.yaml'
  - '*.yml'
  - '.yamllint'

rules:
  braces:                  enable
  brackets:                enable
  colons:                  enable
  commas:                  enable
  comments-indentation:    disable
  comments:                disable
  document-end:            enable
  document-start:          [level: warning]
  empty-lines:             enable
  empty-values:            enable
  hyphens:                 enable
  indentation:             enable
  key-duplicates:          enable
  key-ordering:            enable
  line-length:             disable
  new-line-at-end-of-file: enable
  new-lines:               enable
  octal-values:            enable
  quoted-strings:          disable
  trailing-spaces:         enable
  truthy:                  disable

...
